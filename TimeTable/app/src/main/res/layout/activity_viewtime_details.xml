<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/textViewTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:text="Module Code" />

    <TextView
        android:id="@+id/textViewYearLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAuthorLabel"
        android:layout_below="@+id/textViewTitleLabel"
        android:layout_marginTop="92dp"
        android:text="Day" />

    <TextView
        android:id="@+id/textViewAuthorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTitleLabel"
        android:layout_below="@+id/textViewTitleLabel"
        android:layout_marginTop="39dp"
        android:text="Start Time" />

    <TextView
        android:id="@+id/textViewAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAuthorLabel"
        android:layout_alignBottom="@+id/textViewAuthorLabel"
        android:layout_alignLeft="@+id/textViewYear"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewYearLabel"
        android:layout_alignBottom="@+id/textViewYearLabel"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewTitleLabel"
        android:layout_alignBottom="@+id/textViewTitleLabel"
        android:layout_alignLeft="@+id/textViewAuthor"
        android:text="TextView" />

</RelativeLayout>